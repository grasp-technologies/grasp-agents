{
        "version": "0.2",
        "language": "en",
        "ignorePaths": [
                ".vscode",
                "venv/**",
                "**/__pycache__/**",
                "examples/**/notebooks"
        ],
        "dictionaries": [
                "python",
                "softwareTerms"
        ],
        "ignoreWords": [
                "pytest",
                "numpy",
                "pandas"
        ],
        "words": [
                "AILLM",
                "pbar",
                "coro"
        ],
        "patterns": [
                {
                        "name": "ignoreHex",
                        "pattern": "0x[0-9a-fA-F]+"
                }
        ],
        "allowCompoundWords": true
}